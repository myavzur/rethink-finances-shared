{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/types": ["./src/types"],
      "@/const": ["./src/const"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}